{
  "name": "gulp-pug-tailwind-starter",
  "version": "1.0.0",
  "scripts": {
    "start": "gulp",
    "build": "npm run build:img && npm run build:pug && npm run build:css",
    "build:img": "xcopy src\\images dist\\images /E /I /Y",
    "build:pug": "gulp",
    "build:css": "npx tailwindcss -i ./src/styles/main.css -o ./dist/css/main.css --watch --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "browser-sync": "^2.27.0",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.1",
    "gulp-pug": "^5.0.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0"
  },
  "dependencies": {
    "tailwindcss-pseudo-elements": "^2.0.0"
  }
}
